<view class="container">
    <textarea class="content" placeholder="分享新鲜事..." bindinput="onInput" maxlength="140" auto-focus bindfocus="onFocus" bindblur="onBlur"></textarea>

    <view class="image-list">
        <!-- 显示图片 -->
        <block>
            <view class="image-wrap">
                <image class="image" src="" mode="aspectFill"></image>
                <i class="iconfont icon-shanchu"></i>
            </view>
        </block>

        <!-- 选择图片 -->
        <view class="image-wrap selectphoto">
            <i class="iconfont icon-jiahao"></i>
        </view>

    </view>
</view>

<view class="footer">
    <text class="words-num">1</text>
    <button class="send-btn" size="mini">发布</button>
</view>